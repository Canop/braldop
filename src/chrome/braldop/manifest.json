{
	"name": "Braldop",
	"version": "2.1",
	"description": "Une extension Chrome open-source pour Braldahim",
	"homepage_url": "http://canop.org/braldop",
	"background_page": "extension-braldop.html",
	"content_scripts": [
		{
			"matches": ["*://jeu.braldahim.com/*"],
			"all_frames" : true,
			"run_at" : "document_end",
			"css": [
				"extension-braldop.css",
				"tabs.css"
			],
			"js": [
				"jquery-1.6.3.min.js",
				"inext_const.js",
				"inext_com.js",
				"ext_general.js",
				"ext_tabs.js",
				"ext_login.js",
				"ext_alarm.js",
				"ext_options.js",
				"ext_main.js"
			]
		},
		{
			"matches": ["http://canop.org/braldop/index.html", "http://canop.org/braldop/", "http://canop.org/braldop/carte_et_extension.html"],
			"run_at" : "document_end",
			"js": [
				"jquery-1.6.3.min.js",
				"inext_const.js",
				"ext_general.js",
				"ext_detect.js"
			]
		}
	]
}
